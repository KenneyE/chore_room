<h1>Current Chore Leaders:</h1>
<ul id="leader-list">
  <% @users.each do |user| %>
    
    <li>
      <a href="<%= user_url(user.id) %>" data-toggle="tooltip" data-placement="top" title="<%= user.completed_chores.count %> chores completed!" class="leader-photo">
        <%= image_tag(user.photo) %>
        <%= user.name %>
      </a><br>
      <% user.completed_chores.count.times do %>
        <div class="chore-square"></div>
      <% end %>
    </li>
    
  <% end %>
</ul>