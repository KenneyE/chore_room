<div class="row">
  <h3><%= weekday %></h3>
  <% @chore_assignments.select { |asgn| asgn.chore.day == weekday }.each do |asgn| %>
    <% if asgn.completed %>
      <% status = 'completed' %>
    <% else %>
      <% status = asgn.due_date > Date.today ? 'incomplete' : 'overdue' %>
    <% end %>
    <%= render partial: 'chores/assignment', 
               locals: { assignment: asgn, status: status } %>
  <% end %>
</div>