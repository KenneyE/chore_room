<h1>Chores!</h1>

<%= render partial: 'shared/addChore',
           locals: { action: chores_url, value: nil, chore: @chores } %>

<div class="col-sm-6 col-offset-3">
<% @chore_assignments.each do |assignment| %>
  <h3><%= assignment.chore.title %></h3>
  <p>Due: <%= assignment.due_date.to_formatted_s(:long_ordinal) %></p>
  <% if assignment.completed %>
    <p class="completed">Completed!</p>
  <% elsif assignment.due_date > Time.now  %>
    <p class="incomplete">Not yet completed.</p>
  <% else %>
    <p class="overdue">Overdue</p>
  <% end %>

  <p>Assigned to:</p>
  <p><%= image_tag(assignment.user.photo, class: "user-photo img-thumbnail img-responsive pull-left") %>
  <%= assignment.user.name %><br>
<% end %>
</div>

<%= button_to "Send Chores", send_chores_url, method: :post, class: "btn btn-warning"%>
