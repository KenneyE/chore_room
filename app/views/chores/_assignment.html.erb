<div class="chore-assignment <%= 'alternate' if alternate %>">
  <h4><%= assignment.chore.title %></h4>
  <p>Due: <%= assignment.due_date.to_formatted_s(:long_ordinal) %></p>
  <% if assignment.completed %>
    <p class="completed">Completed!</p>
  <% elsif assignment.due_date > Date.today  %>
    <p class="incomplete">Not yet completed.</p>
  <% else %>
    <p class="overdue">Overdue</p>
  <% end %>
  <p>Assigned to:</p>
  <p><%= image_tag(assignment.user.photo, class: "user-photo img-responsive pull-left") %>
    <%= assignment.user.name %> <br> 
    <% if current_user == assignment.user && !assignment.completed %>
      <%= link_to "mark completed", complete_chore_url(assignment) %>
    <% end %>
  </p>
  <div class="clearfix"></div>
</div>